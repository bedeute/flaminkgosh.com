html
    background-image: linear-gradient(white 60%, #006268 40%)
    min-height: 100%

#app
    margin-left: auto;
    margin-right: auto;
    position: absolute;
    top: 30%;
    transform: translateY(-30%);
    left: 0;
    right: 0;

.custom-homepage .hero
    > #main-title, .description
        display: none

.custom-homepage
    &:before
        content: ''
        height: 100%
        position relative
        width: 100%

.theme-default-content.custom.content__default
    margin-top: -25px
    margin-left: auto
    margin-right: auto
    max-width: 860px

    &:before
        content: ''
        background-color: #006268
        position: absolute
        width: 100%
        height: 50%
        left: 0
        right: 0
        top: auto
        display: block

    > *
        position: relative

    > p
        text-align: center
        padding-top: 20px

        > a
            padding: 12px
            width: 110px
            display: inline-block

            > img 
                width: 80px

            > svg 
                display: none
